rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Content collection for the website
    match /content/{docId} {
      // Anyone can read the website content
      allow read: if true;
      
      // Only authenticated users can write.
      // The edit page will use anonymous authentication for security.
      allow write: if request.auth != null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
