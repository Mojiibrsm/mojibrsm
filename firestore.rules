rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin role
    function isAdmin() {
      // Check if the user document exists and has the role 'Admin'.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Users Collection
    // - Anyone can create their own user document.
    // - Only the authenticated user can read or update their own document.
    // - Admins can read/write any user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null;
    }

    // Projects Collection
    // - Only admins can create, update, or delete projects.
    // - Any authenticated user can read projects.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Requests Collection
    // - Authenticated users can create their own requests.
    // - Users can read, update, or delete their own requests.
    // - Admins can read, update and delete any request.
    match /requests/{requestId} {
      // A user can create a request for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // A user can read, update, or delete their own request. Admins can do anything.
      allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // MessageThreads Collection
    // - Users can create threads for themselves.
    // - Users can read and update (add messages to) threads they are part of.
    // - Admins can read and update any thread.
    match /messageThreads/{threadId} {
      // A user can create a thread for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // A user can read/update their own thread. Admins can read/update any thread.
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
